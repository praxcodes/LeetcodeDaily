#include<bits/stdc++.h>
using namespace std;
vector<vector<int>> divideArray(vector<int>& nums, int k) {
        int n=nums.size();
        sort(nums.begin(),nums.end());
        vector<vector<int>>ans;
        vector<int>temp;
        int count=1;
        temp.push_back(nums[0]);
       
        int i=1;
        while(i<n){
            if(i%3==0){
                temp.push_back(nums[i]);
                count++;
                i++;   
            }
            if(nums[i]-nums[i-1]>k){
            return {};
        }
            if((i+1)%3==0){
            if(nums[i]-nums[i-2]>k){
                return {};
            }
        }
           
            temp.push_back(nums[i]);
            count++;
            
       
           if(count==3){
            ans.push_back(temp);
            temp.clear();
            count=0;
            
        }
        i++;
        }
        return ans;
    }
